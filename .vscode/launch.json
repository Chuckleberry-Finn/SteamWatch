  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch interactions",
      "outputCapture": "std",
      "showAsyncStacks": true,
      "runtimeArgs": [
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "cwd": "${workspaceFolder}/packages/interactions",
      "args": [
        "${workspaceFolder}/packages/interactions/src/index.ts"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch processes",
      "outputCapture": "std",
      "showAsyncStacks": true,
      "runtimeArgs": [
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "cwd": "${workspaceFolder}/packages/processes",
      "args": [
        "${workspaceFolder}/packages/processes/src/index.ts"
      ]
    }
  ]
}
