{
  "name": "steam-watch",
  "version": "1.0.0",
  "description": "A Discord bot for keeping track of Steam apps",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run lint:fix && tsc",
    "lint": "eslint --ext ts src",
    "lint:fix": "eslint --ext ts --fix src",
    "dev": "nodemon -e ts --exec ts-node src/index.ts",
    "dev:bot": "nodemon -e ts --exec ts-node src/index.ts --no-watcher",
    "dev:watcher": "nodemon -e ts --exec ts-node src/index.ts --no-bot"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dukeofsussex/SteamWatch.git"
  },
  "author": "Christopher Satchell",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/dukeofsussex/SteamWatch/issues"
  },
  "homepage": "https://github.com/dukeofsussex/SteamWatch#readme",
  "dependencies": {
    "@bbob/core": "^2.5.5",
    "@bbob/plugin-helper": "^2.5.5",
    "@bbob/preset": "^2.5.5",
    "common-tags": "^1.8.0",
    "discord.js": "^11.6.4",
    "discord.js-commando": "^0.10.0",
    "dotenv": "^8.2.0",
    "html-entities": "^1.2.1",
    "knex": "^0.20.13",
    "markdown-table": "^2.0.0",
    "mysql": "^2.18.1",
    "node-fetch": "^2.6.0",
    "steam": "^1.4.1",
    "vdf": "^0.0.2",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.4.2"
  },
  "devDependencies": {
    "@types/common-tags": "^1.8.0",
    "@types/node": "^13.11.0",
    "@types/node-fetch": "^2.5.5",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.2.0",
    "eslint-plugin-import": "^2.20.2",
    "nodemon": "^2.0.2",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  }
}
